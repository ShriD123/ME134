<launch>
  <!-- Start the USB camera node. -->
  <node pkg ="usb_cam"
	type="usb_cam_node"
	name="usb_cam"
	output="screen">
    <param name="camera_name"   value="logitech"/>
    <param name="pixel_format"  value="yuyv"/>
  </node>

  <!-- Run the image viewer -->
  <node pkg ="image_view"
	type="image_view"
	name="image_view"
	output="screen">
    <remap from="image" to="/usb_cam/image_raw"/>
  </node>	
</launch>
